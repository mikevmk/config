#!/bin/sh

# Firefox wrapper
# I need a clean one

cleanup() {
    rm -fr $HOME/.cache/mozilla/
    rm -fr $HOME/.mozilla
    rm -f ${override_ini}
}

cleanup
override_ini=`mktemp`
cat <<EOF > ${override_ini}
[XRE]
EnableProfileMigrator=false
EOF
firefox --override ${override_ini} https://duckduckgo.com
cleanup
